.pg-profile-page__referral {
    .pg-profile-page__label {
        margin-left: 24px;
    }

    .pg-copyable-text__section {
        padding: calc(var(--gap) * 3) calc(var(--gap) * 3) calc(var(--gap) * 3) calc(var(--gap) * 4);
        position: relative;

        .pg-copyable-text-field {
            &__input {
                padding: 2px;
                border-color: var(--profile-grey);
                border-radius: var(--gap);

                input {
                    height: calc(var(--gap) * 8);
                    box-sizing: border-box;
                    color: var(--profile-grey);
                    padding: 0px 10px;
                }
            }

            &__button {
                cursor: pointer;
                text-transform: uppercase;
                height: calc(var(--gap) * 4);
                width: calc(var(--gap) * 20);
                position: absolute;
                right: calc(var(--gap) * 4);
                top: calc(var(--gap) * 4);
                line-height: calc(var(--gap) * 4);
                text-align: center;
            }
        }
    }
}

