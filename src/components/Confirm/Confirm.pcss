@import "./Phone.pcss";
@import "./Identity.pcss";
@import "./Documents.pcss";

.pg-confirm {
  background: url(assets/images/background.svg);
  height: 100vh;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;

  &-box {
    background-color: var(--base-bright);
    display: block;
    margin: 0 auto;
    max-width: 560px;
    width: 100%;
    max-height: 480px;
    height: 100%;
  }

  &__success,
  &__error {
    font-size: 1.2rem;
    text-align: center;
  }

  &__error {
    color: var(--order-error-color);
  }

  &__success {
    color: var(--success-color);
  }

  &__title {
    color: var(--active-color);
    text-align: center;

    &-text {
      white-space: nowrap;
      position: absolute;
      top: 40px;
      left: -55px;
      font-size: 14px;
      color: var(--kyc-title-color);
    }
  }

  &__progress {
    margin: 0 auto;
    height: 100px;
    background: var(--kyc-header-color);
    border-bottom: 1px solid var(--kyc-header-border);

    &-circle {
      &-1,
      &-2,
      &-3 {
        background: var(--kyc-circle-color);
        border-radius: 50%;
        box-sizing: border-box;
        height: 25px;
        position: relative;
        width: 25px;
        margin-top: 20px;
        &:after {
          font-size: 12px;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100%;
          font-weight: bold;
          color: var(--color-white);
          margin-top: 2px;
        }
      }

      &-1:after {
        content: "1";
      }

      &-2:after {
        content: "2";
      }

      &-3:after {
        content: "3";
      }

      &-3 {
        margin-right: 0;
      }
    }

    &-line {
      &-1,
      &-2 {
        display: inline-block;
        background-color: var(--kyc-progress-line);
        flex: 1;
        height: 1px;
        margin: 20px 10px 0 10px;
      }
    }

    &-items {
      display: flex;
      position: relative;
      align-items: center;
      justify-content: space-between;
      max-width: 360px;
      width: 100%;
      margin: auto;
    }

    &-first {
      .pg-confirm__progress-circle-1 {
        background: var(--kyc-active-color);
      }
       .pg-confirm__active-1 {
        color: var(--color-white);
      }
    }

    &-second {
      .pg-confirm__progress-circle-2 {
        background: var(--kyc-active-color);
      }
       .pg-confirm__active-2 {
        color: var(--color-white);
      }
    }
    &-third {
      .pg-confirm__progress-circle-3 {
        background: var(--kyc-active-color);
      }
       .pg-confirm__active-3 {
        color: var(--color-white);
      }
    }
  }

  &__content {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;

    input, button {
      outline: none;
    }

    &-deep {
      display: flex;
      justify-content: center;
      margin: 0 auto;
      padding-bottom: 30px;

      input {
        font-weight: normal;
        background: var(--kyc-button);
        color: var(--color-white);
        font-size: 18px;
        height: 40px;
        width: 100%;
        margin: 0;
      }
    }
  }
}
