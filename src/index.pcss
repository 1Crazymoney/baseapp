.cr-title-component {
  font-size: 1em !important;
  width: 100%;
  border-bottom: 1px solid var(--trading-header);
}

.cr-table {
  box-shadow: none;
  overflow-y: scroll;

  &-header__content {
    height: auto;
    padding: 12px 12px 6px;
    cursor: move;
    background: var(--table-dark-header-color);
    box-shadow: inset 0 -1px 0 var(--header-border);
    position: sticky;
    top: 0;
    z-index: 9999;
  }

  &-background {
    top: 60px;

    &__row {
      padding: 16px;
    }
  }

  thead th {
    position: sticky;
    top: calc(var(--gap) * 5.5);
    z-index: 9999;
    background: var(--base-bright);
  }

  td {
    font-weight: normal;
    line-height: 16px;
  }

  td,
  th {
    padding: 6px 12px !important;
    font-size: 0.8em !important;
  }

  td:first-child,
  th:first-child {
    text-align: left;
  }

  td:last-child,
  th:last-child {
    text-align: right;
  }
}

body, html {
  height: 100% !important;
  font-family: var(--font-family);
  font-size: var(--font-size);
  font-weight: var(--font-weight);
  color: var(--base);
  background-color: var(--background);
  padding: 0;
  margin: 0;
}

.pg-container {
  width: 95%;
  box-sizing: border-box;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.cr-button {
  border-radius: 4px;
}

.cr-table {
  &__head {
    th {
      font-size: 1em !important;
    }
  }

  &__body {
    &-row-background {
      padding: calc(var(--gap) * 2.6);
    }

    td {
      background: var(--transparent);
      font-size: 1em !important;
      padding-top: calc(var(--gap) * 1.38) !important;
      padding-bottom: calc(var(--gap) * 1.38) !important;
    }
  }
}

.cr-dropdown {
  &__list-item {
    cursor: default;
  }
}

@media (max-width: 768px) {
  .pg-container {
    max-width: 720px;
  }
  :root {
    --font-size: 16px !important;
  }
}

@media (max-width: 576px) {
  .pg-container {
    max-width: 540px;
  }
}

// fix weird input[type=button] appearance in mobile browsers
.cr-button {
  -webkit-appearance: none;
}

:global .cr-grid {
  &-item {
    height: 100%;

    &__body {
      height: 100%;
      padding: 0 !important;
      overflow-y: scroll;
    }
  }
}

:global .react-grid-item {
  background: #182034 !important;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  border: none !important;
  border-radius: 3px;
  .cr-grid-item__body {
    background: var(--base-bright);
    border-radius: 3px;
  }
}

.react-resizable-handle {
  border: 5px solid var(--grid-resizable-border-color) !important;
  border-left-color: var(--transparent) !important;
  border-top-color: var(--transparent) !important;
  cursor: nwse-resize !important;
  opacity: 0.5 !important;
  z-index: 9999;

  &::before {
    bottom: calc(var(--gap) * 0.1) !important;
    right: calc(var(--gap) * (-1.2)) !important;
    width: calc(var(--gap) * 3.4) !important;
  }

  &::after {
    right: calc(var(--gap) * (-1.4)) !important;
    width: calc(var( --gap) * 4.6) !important;
  }
}

.pg-loader-container {
  margin-top: calc(var(--gap) * 2);
  filter: brightness(0.2);
}

input:-webkit-autofill {
  background: var(--transparent) !important;
}

::-webkit-scrollbar {
  width: 0;
}

::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background: var(--scrollbar-bg);
  border-radius: var(--gap);
}

::-webkit-scrollbar-thumb {
  background-color: var(--scrollbar);
  border-radius: var(--gap);
}
